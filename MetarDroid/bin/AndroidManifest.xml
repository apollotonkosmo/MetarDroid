<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Apollo.metardroid"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.Apollo.metardroid.RssChannelActivity" >
        </activity>
        <activity
            android:name="com.Apollo.metardroid.ArticleDetailActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.Apollo.metardroid.ArticleActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.Apollo.metardroid.WeatherActivity"
            android:parentActivityName="com.Apollo.metardroid.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.Apollo.metardroid.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.Apollo.metardroid.WeatherDetailActivity"
            android:label="@string/title_activity_weather_detail"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.Apollo.metardroid.CameraAcivity" >
        </activity>
    </application>

</manifest>